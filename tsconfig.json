{
    "compilerOptions": {
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "baseUrl": "./",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "inlineSourceMap": true,
        "isolatedModules": false,
        "lib": [
            "ES2015",
            "ES2015.Promise",
            "ES2015.Reflect",
            "ES2015.Core",
            "ES2015.Collection",
            "ES2015.Generator",
            "ES2015.Iterable",
            "ES2015.Promise",
            "ES2015.Proxy",
            "ES2015.Reflect",
            "ES2015.Symbol"
        ],
        "listEmittedFiles": true,
        "listFiles": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": false,
        "noImplicitReturns": true,
        "outDir": "./build",
        "paths": {},
        "removeComments": true,
        "sourceMap": true,
        "sourceRoot": "./src",
        "suppressImplicitAnyIndexErrors": true,
        "target": "es6",
        "typeRoots": [
            "node_modules/@types"
        ]
    },
    "include": [
        "src/**/*",
        "demo/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}